@model IEnumerable<WebAdminConsole.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h2>My Teams</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamCategory.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamId">Edit Team</a> | <a asp-action="ListRunners" asp-route-id="@item.TeamId">Edit Runners</a>
                </td>
            </tr>
        }
    </tbody>
</table>